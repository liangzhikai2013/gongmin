.tab{
  display: flex;
  justify-content: center;
  margin-top:26px ;
}
.action-tab{
  width: 175px;
	height: 37px;
	background-color: #53606f;
  border-radius: 10px 10px 0px 0px;
  color: #ffffff;
  line-height: 37px;
  text-align: center;
  margin: 0 5px;
}
.unaction-tab{
  width: 176px;
	height: 37px;
	background-color: #f2f2f2;
  border-radius: 10px 10px 0px 0px;
  text-align: center;
  line-height: 37px;
  margin: 0 5px;
}
.tag{
  width: 54px;
	height: 15px;
	background-color: #d5d5d5;
	border-radius: 8px;
  opacity: 0.6;
  color: #454647;
  font-size: 8px;
  line-height: 15px;
  text-align: center;
  padding: 0 5px;
}
.list{
  background-color: #f4f4f4;
  padding: 20px 10px;
  height: calc(100vh - 120px);
  overflow: scroll;
}
.item{
  background: white;
  border-radius: 7px;
  padding: 20px;
  height: 117px;
  margin-top: 20px;
}
.top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top image{
  width: 114px;
	height: 90px;
}
.g2{
  display: flex;
  justify-content: flex-end;
  font-size: 13px;
  color: #4f5144;
  margin-top: 12px;
  opacity: 0.71;
}
.right{
  width: 200px;
}
.btn{
  width: 59px;
	height: 26px;
	border-radius: 13px;
  border: solid 1px #656565;
  font-size: 10px;
  color: #656565;
  line-height: 26px;
  text-align: center;
  margin-top: 10px;
  float: right;
}