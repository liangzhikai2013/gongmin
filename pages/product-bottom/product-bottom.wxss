
cover-view cover-image{
  width: 22px;
	height: 21px;
}
.collection{
  display: flex;
  flex-direction: column;

}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 76px;
  justify-content: space-between;
  align-items: center;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  background: white;
  padding-left: 30px;
  padding-right: 20px;

}
.luck-draw{
  width: 105px;
	height: 50px;
	border-radius: 10px;
  border: solid 1px #707070;
  color: #53606f;
  font-size: 16px;
  line-height: 50px;
  align-items: center;
  text-align: center;
}
.buy{
  width: 179px;
	height: 50px;
  border-radius: 10px;
  border: solid 1px #707070;
  color: #53606f;
  font-size: 16px;
  line-height: 50px;
  text-align: center;
  margin-left: 8px;
}

.action{
  background: #53606f;
