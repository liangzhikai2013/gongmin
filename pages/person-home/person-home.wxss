
.title{
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
  font-size: 16px;
  color: #98999a;
  align-items: center;
  margin-top: -10px;
}
.title image{
  margin-top: -10px;
  width: 91px;
  height: 91px;
  border-radius: 50%;
}
.right-group1{
  width: 200px;
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  padding: 0 30px;
}
.btn-group{
  display: flex;
  justify-content: center;
  margin-top: 10px;
}
.btn{
  width: 97px;
	height: 32px;
	background-color: #53606f;
  border-radius: 16px;
  font-size: 13px;
  color: #ffffff;
  line-height: 32px;
  text-align: center;
}
.btn2{
  width: 99px;
	height: 32px;
	border-radius: 16px;
  border: solid 1px #707070;
  font-size: 13px;
  color: #98999a;
  line-height: 32px;
  text-align: center;
  margin-left: 17px;
}
.right-group-item{
  text-align: center;
  font-weight: bold;
}
.tag{
  
	height: 17px;
	background-color: #53606f;
  border-radius: 16px;
  font-size: 7px;
  color: #ffffff;
  line-height: 17px;
  padding: 0 10px;
  margin-top: 12px;
  text-align: center;
  margin-left: 8px;
}

.content-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content-list{
  width: 100%;
  margin-top:25px;
  column-count: 2;
  column-gap: 20px;
  break-inside: avoid;
}
.content-item{
  display: flex;
  flex-direction: column;
  width: 100%;
  break-inside: avoid;/*避免在元素内部插入分页符*/
  box-sizing: border-box; 
}
.content-item .picimage{
  width: 100%;
  display:block;
  
  border-radius:10px;
  max-height: 400px;
  object-fit: cover;
}
.content-item span{
  height: 31px;
  font-size: 12px;
  color: #323334;
  margin: 5px 0 10px 0;
  overflow: hidden;
}
.content-item-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 20px;
  margin-bottom: 20px;
}
.group{
  display: flex;
  height: 20px;
  flex-direction: row;
  align-items: center;
}
.group span{
  font-size: 12px;
  color: #98999a;
  margin: 0 5px;
  line-height: 20px;
  height: 20px;
}
.content-item .icon{
  width: 14px;
	height: 13px;
}
.content-item .avatar{
  width: 17px;
  height: 17px;
  border-radius:50%;
}
.picker{
  font-size: 13px;
  line-height: 18px;
  color: #2c2c2c;
  align-items: center;
  display: flex;
}
.picker image{
  width: 16px;
  height: 16px;
  margin-left: 5px;
}