.add-address{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-family: PingFang SC;
	font-size: 18px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 32px;
	letter-spacing: 0px;
  color: #000001;
  align-items: center;
  margin-top: 5px;
  font-weight:bold
}
.add-address image{
  width: 19px;
	height: 18px;
}
.line{
  width: 100%;
	height: 0px;
  border: solid 1px #f4f5f7;
  margin-top: 25px;
}
.authentication{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-family: PingFang SC;
	font-size: 18px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 32px;
	letter-spacing: 0px;
  color: #000001;
  align-items: center;
  margin-top: 25px;
  font-weight:bold
}
.authentication image{
  width: 18px;
  height: 20px;
  
}
.order-content{
  height: 123px;
  display:flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}
.order-content image{
  width: 82px;
	height: 82px;
}
.order-content .price{
  font-size: 14px;
	letter-spacing: 0px;
  color: #000001;
  font-weight:bold;
  margin-left: 37px;
}
.order-content .title{
  font-size: 15px;
	line-height: 32px;
	letter-spacing: 0px;
  color: #585f6c;
  margin-left: 13px;
}
.order-content .count{
  font-size: 13px;
	line-height: 32px;
	letter-spacing: 0px;
  color: #7e808d;
  margin-left: 13px;
}
.notice{
  font-size: 13px;
	line-height: 32px;
	letter-spacing: 0px;
  color: #7e808d;
  margin-top: 1px;
}
.purchase{
  width: calc(100%-40px);
  height: 53px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  margin: 16px 0;
  background: white;
  padding: 0 20px;
}
.rule-content{
  width: calc(100%-40px);
  padding:  20px;
  font-size: 13px;
	font-weight: normal;
	font-stretch: normal;
	
	letter-spacing: 0px;
  color: #7e808d;
  background: white;
  display: flex;
  flex-direction: column;
}
.rule-content span{
  margin-bottom:20px ;
}
.bottom{
  height: 43px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}
.bottom .real-price{
  font-weight: bold;
  font-size: 14px;
  line-height: 32px;
	letter-spacing: 0px;
  color: #d0000d;
  margin-bottom: 0px!important;
}
.bottom .btn-submit{
  width: 105px;
	height: 43px;
  font-weight: bold;
  font-size: 16px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 43px;
	letter-spacing: 0px;
  color: #ffffff;
  background-color: #53606f;
  border-radius: 8px;
  text-align: center;
}