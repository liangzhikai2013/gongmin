
.dynamic-list{
  width:  calc(100%);
  
  padding-top: 9px;
  display: flex;
  flex-direction: column;
  padding-bottom: 140px;
  background-color: #f1f3f1;
}
.dynamic{
  
  font-family: PingFang SC;
  font-size: 16px;
  line-height: 22px;
  color: #717171;
	opacity: 0.68;
}
.commodity-content{
  width:  calc(100%-60px);
  background-color: white;
  padding: 30px;
  
  margin-top:16px;
  display: flex;
  flex-direction: column;
  padding-bottom: 22px;
}
.personal-infor{
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-items: start;
}
.personal-avatar{
  width: 38px;
  height: 38px;
  border-radius: 50%;
}
.personal-right{
  height: 38px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10px;
}
.personal-name{
  line-height: 16px;
  color: #323334;
  font-family: PingFang SC;
  font-size: 12px;
}
.personal-time{
  font-family: PingFang SC;
	font-size: 8px;
	line-height: 10px;
	color: #98999a;
}
.dynamic-text{
  font-family: PingFang SC;
	font-size: 13px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 17px;
	letter-spacing: 0px;
  color: #323334;
  margin-top: 9px;
  margin-bottom: 5px;
}
.dynamic-img{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  flex-wrap:wrap-reverse;
}
.dynamic-img-img1{
  width: 157px;
	height: 192px;
}
.dynamic-img-img2{
  width: 99px;
  height: 99px;
  margin-left: 7px;
}
.dynamic-bottom{
  margin-top: 22px;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
}
.dynamic-bottom-item{
  
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  padding:0 15px;
}
.dynamic-icon{
  width: 20px;
	height: 20px;
}
.dynamic-span{
  font-family: PingFang SC;
	font-size: 14px;
	font-weight: normal;
	font-stretch: normal;
	line-height: 20px;
	letter-spacing: 0px;
  color: #373935;
  margin-left: 5px;
}
.btn-follow{
  width: 56px;
	height: 23px;
	border-radius: 12px;
  border: solid 1px #c7c7c7;
  color: #323334;
  font-size: 12px;
  line-height: 23px;
  text-align: center;
  
  justify-self: end;
}
