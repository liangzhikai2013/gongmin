.item{
  display: flex;
  height: 53px;
  justify-content: space-between;
  align-items: center;
  color: #7e808c;
  font-size: 15px;
}
.item image{
  width: 13px;
	height: 13px;
}
.item .right{
  display: flex;
  justify-content:flex-end;
  width: 50px;
  align-items: center;
}
input{
  color: #7e808c;
  font-size: 15px;
}
textarea{
  color: #7e808c;
  font-size: 15px;
  width: 100%;
}
.textarea-detail-address{
  margin-top: 13px;
  height: 100px;
}
.top{
  color:#fff;
  padding: 20px;
}
.btn{
  width: 168px;
	height: 43px;
	background-color: #53606f;
  border-radius: 8px;
  font-size: 16px;
  color: #ffffff;
  line-height: 43px;
  text-align: center;
  margin-left: 7px;
}
.btn-group{
  display: flex;
  margin-top: 23px;
  align-items: center;
  justify-content: center;
}